  "minimap": {
    "show": "always",
    "display_in": "active_editor",
    "thumb": "always"
  },

  "active_pane_modifiers": {
    // "border_size": 5
  },

  "features": {
    "edit_prediction_provider": "copilot"
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },
  "outline_panel": {
    "dock": "right"
  },
  "soft_wrap": "editor_width",
  "file_types": {
    "XML": ["*.csproj"]
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "disabled_globs": ["/home/parker/Documents/playground/learn-ruby/*"],
    "mode": "subtle"
  },
  "experimental.theme_overrides": {
    // "panel.background": "#00000000",
    // "background": "#ffffff"
  },
  "theme": "Zed Dark",
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "agent": {
    // "default_view": "text_thread",
    "use_modifier_to_send": false,
    "play_sound_when_agent_done": false,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },

  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "tab_bar": {
    "show": true
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "terminal": {
    "dock": "bottom",
    "default_height": 250
    // "tab_bar": {
    //   "show": "auto"
    // }
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "languages": {
    "Shell Script": {
      "show_edit_predictions": true
    },
    "Nix": {
      "format_on_save": "on"
    },
    "TSX": {},
    "Python": {
      "language_servers": ["ruff", "pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        },
        { "code_action": "source.fixAll.ruff" },
        { "code_action": "source.organizeImports.ruff" }
      ]
    },
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "TypeScript": {
      "tab_size": 4
    },
    "Rust": {},
    "C": {
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": ["-c", "clang-format"]
        }
      },
      "format_on_save": "off"
    },
    "Gleam": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "gleam",
          "arguments": ["format", "--stdin"]
        }
      }
    },
    "C++": {
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": ["-c", "clang-format"]
        }
      },
      "tab_size": 2,
      "format_on_save": "off"
    }
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "ui_font_family": ".ZedSans",
  "ui_font_size": 16,
  "buffer_font_family": "FiraCode Nerd Font Propo",
  "buffer_font_weight": 500,
  "buffer_font_size": 12.5,
  "title_bar": {
    "show_user_picture": true,
    "show_menus": false,
    "show_branch_icon": true,
    "show_onboarding_banner": false
  },
  "scrollbar": {
    "show": "never"
  },

  "format_on_save": "on",
  "file_scan_exclusions": [".next", ".turbo", "node_modules", "dist"],
  "project_panel": {
    "drag_and_drop": false,
    "sticky_scroll": false,
    "dock": "left",
    "indent_size": 15,
    "scrollbar": {
      "show": "never"
    },
    "hide_gitignore": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "completion": {
          "snippets": {
            "custom": {
              "Arc::new": {
                "postfix": "arc",
                "body": ["Arc::new(${receiver})"],
                "requires": "std::sync::Arc",
                "scope": "expr"
              },
              "Some": {
                "postfix": "some",
                "body": ["Some(${receiver})"],
                "scope": "expr"
              },
              "Ok": {
                "postfix": "ok",
                "body": ["Ok(${receiver})"],
                "scope": "expr"
              },
              "Rc::new": {
                "postfix": "rc",
                "body": ["Rc::new(${receiver})"],
                "requires": "std::rc::Rc",
                "scope": "expr"
              },
              "Box::pin": {
                "postfix": "boxpin",
                "body": ["Box::pin(${receiver})"],
                "requires": "std::boxed::Box",
                "scope": "expr"
              },
              "vec!": {
                "postfix": "vec",
                "body": ["vec![${receiver}]"],
                "description": "vec![]",
                "scope": "expr"
              }
            }
          }
        }
      }
    },
    "clangd": {
      "binary": {
        // "path": "/home/parker/github/clangd-proxy/target/release/clangd-proxy",
        "arguments": ["--clang-tidy"]
      }
    },
    "pyright": {
      "settings": {
        "analysis": {
          "autoSearchPaths": true,
          "useLibraryCodeForTypes": true,
          "typeCheckingMode": "strict",
          "reportUnusedVariable": "warning"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
          // "lineLength": 120,
          "lint": {
            "extendSelect": [
              // Recommended rules for Python linting
              "I", // isort (sorts imports)
              "ARG", // flake8-unused-arguments detects unused arguments in functions
              "F841", // Warn about unused variables
              "E", // Pycodestyle errors (style issues like indentation, whitespace, etc.)
              "F", // Pyflakes rules (includes F841 for unused variables, and other common Python errors)
              "W", // Pycodestyle warnings (like line breaks before binary operators)
              "C90", // Pylint rules for cyclomatic complexity and code structure
              "N", // PEP8 Naming conventions
              "B", // Bugbear (detects potential code issues like mutable default arguments)
              "A" // flake8-builtins (detects misuse of Python built-ins like `list`, `dict`, etc.)
            ]
          }
        }
      }
    }
  }
}
