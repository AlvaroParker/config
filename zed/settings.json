{
  "ui_font_weight": 500.0,
  "confirm_quit": false,
  "redact_private_values": false,
  "zoomed_padding": false,
  "profiles": {
    "rust-no-clippy": {
      "lsp": {
        "rust-analyzer": {
          "initialization_options": {
            "completion": {
              "snippets": {
                "custom": {
                  "Arc::new": {
                    "postfix": "arc",
                    "body": ["Arc::new(${receiver})"],
                    "requires": "std::sync::Arc",
                    "scope": "expr"
                  },
                  "Some": {
                    "postfix": "some",
                    "body": ["Some(${receiver})"],
                    "scope": "expr"
                  },
                  "Ok": {
                    "postfix": "ok",
                    "body": ["Ok(${receiver})"],
                    "scope": "expr"
                  },
                  "Rc::new": {
                    "postfix": "rc",
                    "body": ["Rc::new(${receiver})"],
                    "requires": "std::rc::Rc",
                    "scope": "expr"
                  },
                  "Box::pin": {
                    "postfix": "boxpin",
                    "body": ["Box::pin(${receiver})"],
                    "requires": "std::boxed::Box",
                    "scope": "expr"
                  },
                  "vec!": {
                    "postfix": "vec",
                    "body": ["vec![${receiver}]"],
                    "description": "vec![]",
                    "scope": "expr"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  // "use_system_path_prompts": false,
  "load_direnv": "shell_hook",
  "agent_servers": {
    "claude": {
      "default_mode": "default"
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
